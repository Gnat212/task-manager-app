<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <DataTemplate x:Key="PhotoComboBoxItemTemplate">
        <Grid Height="35" HorizontalAlignment="Stretch">
            <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                <Border Width="30" Height="30" CornerRadius="5">
                    <Border.Background>
                        <ImageBrush Stretch="UniformToFill" ImageSource="{Binding PhotoOrDefault}"></ImageBrush>
                    </Border.Background>
                </Border>
                <TextBlock Margin="10,0,0,0" TextTrimming="CharacterEllipsis" VerticalAlignment="Center" FontSize="16" FontWeight="Regular" FontFamily="{StaticResource SF UI Display}" Text="{Binding ShortUsername}" ></TextBlock>
            </StackPanel>
        </Grid>
    </DataTemplate>
</ResourceDictionary>